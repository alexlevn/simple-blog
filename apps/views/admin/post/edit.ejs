<!DOCTYPE html>
<html lang="en">
<%- include ../layout/head %>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>

    <body>
        <%- include ../layout/nav %>
            <div class="container">
                <div class="row py-2">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <% if (data && data.error){ %>
                                <div id="login-alert" class="alert alert-danger col-sm-12">
                                    <%= "Error: " + data.error %>
                                </div>
                                <% } %>
                                    <div class="panel-heading">
                                        Edit Post
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <form role="form" method="" action="">

                                                    <input type="hidden" class="id" name="id" value="<% if(data && data.post){%> <%= data.post.id %> <%} %>" />

                                                    <div class="form-group">
                                                        <label>Title</label>
                                                        <input class="form-control title" name="title" placeholder="Title" value="<% if(data && data.post){%> <%= data.post.title %> <%} %>"
                                                        />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Content</label>
                                                        <textarea class="form-control content" name="content" placeholder="Content">
                                                                <% if(data && data.post){%> <%= data.post.content %> <%} %>
                                                        </textarea>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Author</label>
                                                        <input class="form-control author" name="author" placeholder="Author" value="<% if(data && data.post){%> <%= data.post.author %> <%} %>"
                                                        />
                                                    </div>
                                                    <input name="" type="submit" class="btn btn-success post_edit" value="Save" />
                                                </form>
                                            </div>
                                        </div>
                                        <!-- /.row (nested) -->
                                    </div>
                                    <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>

            </div>
            <!-- Optional JavaScript -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
            <script src="/static/js/post.js" type="text/javascript"></script>
    </body>

</html>