<!DOCTYPE html>
<html lang="en">
<%- include layout/head %>
    <body>
        <%- include layout/nav %>
            <div class="container">
                <div class="row my-2">
                    <div class="col-md-12">
                        <a href="/admin/post/new" class="btn btn-success pull-right">Add New Post</a>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        POSTS
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Content</th>
                                        <th>Author</th>
                                        <th>Create at</th>
                                        <th>Update at</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% if (data && data.posts){ 
                                    for(var i = 0; i < data.posts.length; i++){ %>
                                        <tr>
                                            <th>
                                                <%= data.posts[i].id %>
                                            </th>
                                            <th>
                                                <%= data.posts[i].title %>
                                            </th>
                                            <th>
                                                <%= data.posts[i].content %>
                                            </th>
                                            <th>
                                                <%= data.posts[i].author %>
                                            </th>
                                            <th>
                                                <%= data.posts[i].created_at %>
                                            </th>
                                            <th>
                                                <%= data.posts[i].updated_at %>
                                            </th>
                                            <th>
                                                <a href="/admin/post/edit/<%= data.posts[i].id %>" class="btn btn-primary"> Edit </a>
                                                <button href="#" class="btn btn-danger post_delete" post_id ="<%=data.posts[i].id%>">Delete </button>
                                            </th>
                                        </tr>
                                        <% }
                            } %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>

            <!-- Optional JavaScript -->

            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
            <script src="/static/js/post.js" type="text/javascript"></script>

            <script src="/static/js/main.js"></script>
    </body>

</html>